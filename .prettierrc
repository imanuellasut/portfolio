{
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "css",
    "endOfLine": "lf",
    "embeddedLanguageFormatting": "auto",
    "singleAttributePerLine": false,
    "overrides": [
        {
            "files": "*.{js,jsx,ts,tsx}",
            "options": {
                "parser": "babel"
            }
        },
        {
            "files": "*.{css,scss}",
            "options": {
                "parser": "css",
                "singleQuote": false
            }
        },
        {
            "files": "*.html",
            "options": {
                "parser": "html"
            }
        },
        {
            "files": "*.json",
            "options": {
                "parser": "json"
            }
        }
    ],
    "plugins": ["prettier-plugin-tailwindcss"]
}
